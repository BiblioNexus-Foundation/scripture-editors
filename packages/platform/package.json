{
  "name": "@biblionexus-foundation/platform-editor",
  "version": "0.6.5",
  "description": "Scripture editor used in Platform. See https://platform.bible",
  "license": "MIT",
  "homepage": "https://github.com/BiblioNexus-Foundation/scripture-editors/tree/main/packages/platform#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BiblioNexus-Foundation/scripture-editors.git"
  },
  "bugs": {
    "url": "https://github.com/BiblioNexus-Foundation/scripture-editors/issues"
  },
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "!dist/package.json",
    "src/index.ts",
    "src/editor"
  ],
  "scripts": {
    "collab": "concurrently \"npm:collab:persist\" \"npm:collab:host\"",
    "collab:persist": "cross-env HOST=localhost PORT=8877 YPERSISTENCE=./yjs-wss-db npx y-websocket-server",
    "collab:host": "tsx src/servers/collab.host.ts",
    "dev": "vite",
    "dev:collab": "cross-env NODE_ENV=development concurrently \"npm:collab\" \"vite\"",
    "dev:test": "cross-env NODE_ENV=testing vite",
    "files:smash": "cd scripts && python3 ./consolidate_files.py",
    "prepublish": "cd ../.. && nx build platform"
  },
  "peerDependencies": {
    "react": ">=18.3.1",
    "react-dom": ">=18.3.1"
  },
  "dependencies": {
    "@biblionexus-foundation/scripture-utilities": "workspace:^",
    "@lexical/headless": "^0.20.0",
    "@lexical/react": "^0.20.0",
    "@lexical/rich-text": "^0.20.0",
    "@lexical/selection": "^0.20.0",
    "@lexical/text": "^0.20.0",
    "@lexical/utils": "^0.20.0",
    "@lexical/yjs": "^0.20.0",
    "@sillsdev/scripture": "^2.0.2",
    "fast-equals": "^5.0.1",
    "lexical": "^0.20.0",
    "y-websocket": "^2.0.4",
    "yjs": "^13.6.20"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/ws": "^8.5.12",
    "concurrently": "^8.2.2",
    "platform-bible-react": "file:./lib/platform-bible-react",
    "platform-bible-utils": "file:./lib/platform-bible-utils",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "shared": "link:../shared",
    "shared-react": "link:../shared-react",
    "tailwindcss": "3.4.15",
    "tailwindcss-animate": "1.0.7",
    "tsx": "^4.19.1",
    "ws": "^8.18.0"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
