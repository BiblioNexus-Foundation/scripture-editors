{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",

    /* Bundler mode */
    "declaration": true,

    /* Linting */
    "allowJs": true
  },
  "include": ["."],
  "exclude": ["dist", "jest.config.ts"]
}
