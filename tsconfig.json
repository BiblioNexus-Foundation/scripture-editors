{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./packages/",
    "paths": {
      "@biblionexus-foundation/scripture-utilities": ["./utilities/src"],
      "usfm-markers": ["tools/usfm-markers/src/index.ts"]
    }
  },
  "include": [
    "packages",
    "tools/usfm-markers/src/generators/markers-data/files/src/simplifyMarkersDictionary.ts",
    "tools/usfm-markers/src/generators/markers-data/utils/generateMarkersDictionary.ts"
  ]
}
